<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 用户表Mapper -->
<!--TODO 后端需要填充下列SQL语句-->
<mapper namespace="com.designx.dao.UserDao" >
	<!-- 新增用户（注册），在数据库中，用户的ID是自增长的，所以不需要在这里传入 -->
	<insert id="addUser" parameterType="User">
		INSERT INTO user(userName,userPassword,userEmail)
		VALUES(#{userName},#{userPassword},#{userEmail})
	</insert>
	<!-- 查找用户（登录用）-->
	<select id="findUser" parameterType="String" resultType="user">

	</select>
	<!-- 根据ID查找用户（管理后台用）-->
	<select id="findUserById" parameterType="int" resultType="user">

	</select>
<!--	更改密码-->
	<update id="updateUserPassword">
		update user set userPassword= #{password,jdbcType=VARCHAR}
		where userID= #{userId,jdbcType=INTEGER}
		and oldPassword= #{oldPassword,jdbcType=VARCHAR}	<!--绑定不同的参数类型-->
	</update>
<!--	查询用户列表(后台管理用)-->
	<select id="findAllUser" resultType="">	<!--记得补充-->

	</select>
<!--	删除用户-->
	<delete id="deleteUser" parameterType="int">

	</delete>
</mapper>